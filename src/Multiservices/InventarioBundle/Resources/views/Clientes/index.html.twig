{% extends app.request.isXmlHttpRequest ? '::baseajax.html.twig' : '::basesmartpanel.html.twig' %}
{% block content -%}
    <h1>Departamentos lista</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nombre</th>
                 <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="#{{ path('clientes_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
            
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="#{{ path('clientes_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="#{{ path('clientes_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="#{{ path('clientes_new') }}">
                Crear nuevo departamento
            </a>
        </li>
    </ul>
