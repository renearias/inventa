		function run_jqgrid_function() {


			var jqgrid_data = [
                            
                        
                                {% for entity in entities %}
                                             { id:"{{ entity.codarticulo }}",
                                               descripcion:"{{ entity.descripcion }}",
                                               stock:    parseInt("{{ entity.stock }}"),
