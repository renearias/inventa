{% extends app.request.isXmlHttpRequest ? '::baseajax.html.twig' : '::base.html.twig' %}
{% block title %}Contrato{% endblock %}
{% block body %}        
<div class="modal-header noprint">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
		&times;
	</button>
	<h4 class="modal-title" id="myModalLabel">Requerimiento de Suministros</h4>
        <div class="text-align-right">
        <a id="imprimirmodal" class="btn btn-primary" onclick="window.print();">Imprimir</a>
        </div>
</div>
<div class="modal-body">
     <div class="row text-center"><img src="{{asset("logouniandes.png")}}" height="100"></div>

<div class="row">
   <table class="record_properties table">
        <tbody>
             <tr>
                <th>Funcion</th>
                <td>___________________________________</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Solicitante</th>
                <td>{{ entity.codproveedor }}</td>
            </tr>
            
            
            
            
            <tr>
                <th colspan="2" style="text-align: center">Articulos</th>
            </tr>
            <tr>
                <td colspan="2">
                    <table class="table">
                      <thead>  
                          <tr>
                              <th>Item</th>
                              <th>Producto</th>
                              <th>Cantidad</th>
                              <th>Valor Unitario</th>
                              <th>Valor Total</th>
                          </tr>
                          </thead>
                          <tbody>
                         {% for comprarticulo in entity.compraarticulos %}
                             <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ comprarticulo.codigo }}</td>
                                <td>{{ comprarticulo.cantidad }}</td>
                                <td>{{ comprarticulo.precio }}</td>
                                <td>{{ comprarticulo.cantidad * comprarticulo.precio}}</td>
                                    
                              </tr>
                         {% endfor %} 
                         </tbody>
                    <tfoot>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th>Total</th>
                        <td>{{ entity.totalfactura/1.12|number_format(2, '.', ',') }}</td>
                    </tr>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th>Iva</th>
                        <td>{{ entity.totalfactura/1.12*0.12|number_format(2, '.', ',') }}</td>
                    </tr>    
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th>Total Factura</th>
                        <td>{{ entity.totalfactura|number_format(2, '.', ',') }}</td>
                    </tr>
                    </tfoot>
                   </table>
                </td>
            </tr>
        </tbody>
    </table>
<table style="width: 100%;text-align: center" class="text-center">
    <tr>
        <th style="width: 20%;text-align: center">Requerido Por</th>
        <th style="width: 20%;text-align: center">Recibido Por</th>
        <th style="width: 20%;text-align: center">Entregado Por</th>
        <th style="width: 20%;text-align: center">Autorizado Por</th>
        <th style="width: 20%;text-align: center">Jefe de Area</th>
    </tr>
    <tr style="height: 2cm">
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td>_________________</td>
        <td>_________________</td>
        <td>_________________</td>
        <td>_________________</td>
        <td>_________________</td>
    </tr>
    <tr>
        <td>Nombres y apellidos</td>
        <td>Nombres y apellidos</td>
        <td>Nombres y apellidos</td>
        <td>Nombres y apellidos</td>
        <td>Nombres y apellidos</td>
    </tr>
</table>
    
      
</div>


    </div>


<div class="modal-footer noprint">
	<button type="button" class="btn btn-default" data-dismiss="modal" onclick="javascript:history.back(1)">
		Cancelar
	</button>
    <a id="imprimirmodal" type="button" class="btn btn-primary" onclick="window.print()">Imprimir</a>
</div>
{% endblock %}              
